<% if session[:user_id] %>
    <%= link_to 'Log Out', logout_path, data: { turbo_method: :delete } %>
<% else %>
    <p>Existing Users: </p>
    <p>You must be logged in or registered to access this feature.</p>
    <%= link_to 'Log In', login_path, method: :get %>
    <%= button_to "Create New User", register_path, method: :get %>
<% end %>

<% if session[:user_id].present? %>
    <section class='existing-users'>
        <p>Existing Users: </p>
        <% @users.each do |user| %>
            <li><%= link_to user.email, user_path(user.id) %></li>
        <% end %>
    </section>
<% end %>
